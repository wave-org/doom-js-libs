{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
